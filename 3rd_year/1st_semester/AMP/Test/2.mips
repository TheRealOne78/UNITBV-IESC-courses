.data
prop:    .asciiz "Introdu un numar... "
rasp:    .asciiz "\nNumarul introdus este: "

.text
.globl main
main:
    la $a0, prop        # la prompt str 
    li $v0, 4           # Syscall 4: print str
    syscall

    # Read int input 
    li $v0, 5           # Syscall 5: read integer
    syscall
    move $t0, $v0       # move result to t0 temporarily

    la $a0, rasp        # Print result message
    li $v0, 4           # Syscall 4: print str
    syscall     

    move $a0, $t0       # move result from t0 to a0 to print it
    li $v0, 1           # Syscall 4: print int
    syscall

    j exit              # End program


exit:
    li $v0, 10  # syscall 10: exit
    syscall
